@model Platform.Entity.Entity.Reunion

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reunion</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.lugar, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lugar)
                @Html.ValidationMessageFor(model => model.lugar)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tematica, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tematica)
                @Html.ValidationMessageFor(model => model.tematica)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Proyecto_id, "Proyecto", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Proyecto_id", "Seleccione..")
                @Html.ValidationMessageFor(model => model.Proyecto_id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
