@model Platform.Entity.Entity.Recurso_Tarea

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Recurso Tarea</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantidad)
                @Html.ValidationMessageFor(model => model.cantidad)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Actividad_id, "Actividad", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Actividad_id", String.Empty)
                @Html.ValidationMessageFor(model => model.Actividad_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tarea_id, "Tarea", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Tarea_id", String.Empty)
                @Html.ValidationMessageFor(model => model.Tarea_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Recurso_id, "Recurso", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Recurso_id", String.Empty)
                @Html.ValidationMessageFor(model => model.Recurso_id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
